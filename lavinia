CREATE DATABASE bancolavinia;

USE bancolavinia;

/* CRIANDO A TABELA CADASTRO COM AS SEGUINTES ESPECIFICAÇÕES: NOT NULL PARA CAMPOS QUE NÃO PODEM FICAR SEM INFORMAÇÕES, 
INT PARA NUMEROS INTEIROS E VARCHAR PARA A QUANTIDADE DE CARACTERES */

CREATE TABLE Cadastro(
idCadastro INT PRIMARY KEY AUTO_INCREMENT,
Responsável VARCHAR(30) NOT NULL,
Cpf CHAR(11) NOT NULL, 
Empresa VARCHAR(10) NOT NULL,
Cnpj CHAR (14) NOT NULL,
Quantidade INT NOT NULL,
Cep CHAR (8) NOT NULL,
Email VARCHAR (30) NOT NULL,
Senha VARCHAR(30) NOT NULL
);

CREATE TABLE Relatorio(
idRelatorio INT PRIMARY KEY AUTO_INCREMENT,
Banheiro INT  NOT NULL,
Reposicao VARCHAR (10) NOT NULL,
Data_Hora DATETIME NOT NULL, 
Estoque VARCHAR (30) NOT NULL
);

CREATE TABLE Arduino(
idArduino INT PRIMARY KEY AUTO_INCREMENT, 
distancia INT NOT NULL, 
Data_Hora DATETIME NOT NULL,
estoque INT NOT NULL
);

INSERT INTO Cadastro (Responsável, Cpf, Empresa, Cnpj, Quantidade, Cep, Email, Senha) VALUES
('Lavinia', '12345678901', 'Empresa', '12345678000100', 50, '12345678', 'contato@empresa.com', 'senha');

SELECT * FROM Cadastro;